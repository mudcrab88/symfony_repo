{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="form-center w-50 h-50">
    <form name="registration_form" method="post">

        <h1 class="h3 mb-3 font-weight-normal">Регистрация</h1>
        <div class="form-group">
            <input type="text" id="registration_form_email" class="form-control" name="registration_form[email]"
                   required="required" placeholder="Имя пользователя">
        </div>
        <div class="form-group">
            <input type="password" id="registration_form_plainPassword" class="form-control"
                   name="registration_form[plainPassword]" placeholder="Пароль" required="required" autocomplete="new-password">
        </div>
        <input type="hidden" id="registration_form__token" name="registration_form[_token]" value="{{ csrf_token('registration_form') }}">
        <div class="form-check">
            <div class="checkbox mb-3">
                <label>
                <input type="checkbox" id="registration_form_agreeTerms" name="registration_form[agreeTerms]"
                       required="required" value="1">
                    Согласиться с условиями
                </label>
            </div>
        </div>


        <button class="btn btn-lg btn-primary" type="submit">
            Зарегистрировать
        </button>
    </form>
</div>
{% endblock %}
