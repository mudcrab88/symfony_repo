{% extends 'base.html.twig' %}

{% block title %}Главная страница{% endblock %}

{% block body %}
{% if user != null %}
<div class="w-100">
    <div class="chat-window">
        <ul class="ul-messages">
        {% for value in messages %}
            <li>
                <span class="messages-datetime">
                    {{ value.datetime }}
                </span>
                <span class="messages-username">
                    {{ value.username }} :
                </span>
                <span class="messages-text">
                    {{ value.text }}
                </span>
                {% if user.email == value.username %}
                    <button type="button" class="btn btn-link btn-sm" data-toggle="modal" data-target=".bd-example-modal-sm"
                            onclick='document.getElementById("change-modal").style.display = "block"'>
                        Изменить
                    </button>
                    <!-- Модальное окно -->
                    <div id="change-modal" class="modal">

                        <!-- Модальное содержание -->
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <p>Некоторый текст в модальном..</p>
                        </div>

                    </div>
                {% endif %}
            </li>
        {% endfor %}
        </ul>
    </div>
    <div class="user-window">222</div>
    <div class="send-window">
        <div class="form-group send-message float-left">
             <textarea id="send-text" class="form-control" rows="5" v-model="message">
             </textarea>
        </div>
        <div class="send-button float-left">
            <button v-on:click="send" class="btn btn-lg btn-success" id="send-button" type="submit">
                Отправить
            </button>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}